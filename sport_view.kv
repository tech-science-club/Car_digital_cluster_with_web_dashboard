<Dash_brd>:
	canvas.before:
		Color:
		    rgba: 1, 1, 1, 1  # red
		Rectangle:
		    pos: self.pos
		    size: root.x_rpm_scale, 700

	canvas:
		Color:
		    rgba: 1, 1, 1, 1  # red
		Rectangle:
		    pos: self.x, self.y
		    size: self.size
		    source: "mustang pattern3.png"
	MDFloatLayout:
		pos_hint:{"center_x": 0.5, "center_y": 0.5}

		canvas:
			Color:
			    rgba: 1, 1, 1, 0.25  # red
			Rectangle:
			    pos: 630, 200
			    size: 760, 520
			    source: "red_zone.png"
	MDLabel:
		id: speed
		pos_hint: {"center_x": 0.79, "center_y": 0.38}
		halign:'center'
		text: "000"
		font_name: 'LCD14'
		font_size: 150
		markup: True

	MDLabel:

		text: "km/h"
		font_size: 40
		pos_hint: {"center_x": 0.9, "center_y": 0.28}
		font_name: 'TickingTimebombBB'
		halign:'center'

	MDLabel:
		id: rpm
		pos_hint: {"center_x": 0.85, "center_y": 0.69}
		halign:'center'
		text: "0000"
		font_name: 'LCD14'
		font_size: 40
		markup: True
	MDLabel:
		
		pos_hint: {"center_x": 0.85, "center_y": 0.64}
		halign:'center'
		text: "RPM"
		font_name: 'LCD14'
		font_size: 32
		markup: True
	Image:
		canvas:
			Color:
			    rgba: 0.25, 0.25, 0.25, 1
		size_hint: 0.045, 0.045
		source: "temp.png"
		pos_hint: {"x": 0.01, "y": 0.61}
	Image:
		size_hint: 0.043, 0.043
		source: "petrol2.png"
		pos_hint: {"x": 0.015, "y": 0.68}


